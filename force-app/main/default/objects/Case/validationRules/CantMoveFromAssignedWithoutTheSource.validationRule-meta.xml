<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CantMoveFromAssignedWithoutTheSource</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT($Setup.CEPSkipValidationRules__c.Case__c),
ISBLANK(TEXT(Source__c)),
NOT(ISPICKVAL(Status, &apos;New&apos;)),
NOT(ISPICKVAL(Status, &apos;Assigned&apos;))		
)</errorConditionFormula>
    <errorMessage>Please provide the source for this case.</errorMessage>
</ValidationRule>

<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>FPSInvoiceRemainder</fullName>
        <description>Email notifying the user of the due date of the invoice</description>
        <protected>false</protected>
        <recipients>
            <field>BillingEmail__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>FPSInvoices/FPSInvoiceRemainder</template>
    </alerts>
    <alerts>
        <fullName>FPSNewInvoiceAlert</fullName>
        <description>Email notifying the user of a new invoice</description>
        <protected>false</protected>
        <recipients>
            <field>BillingEmail__c</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>FPSInvoices/FPSNewInvoice</template>
    </alerts>
    <rules>
        <fullName>FPSInvoiceRemainder</fullName>
        <actions>
            <name>FPSInvoiceRemainder</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Invoice__c.DownloadLink__c</field>
            <operation>notEqual</operation>
            <value>null</value>
        </criteriaItems>
        <criteriaItems>
            <field>Invoice__c.SendRemainder__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Invoice__c.BillingEmail__c</field>
            <operation>notEqual</operation>
            <value>null</value>
        </criteriaItems>
        <description>Rule created to send an email to the customer before the due date of the invoice</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>FPSNewInvoiceCreated</fullName>
        <actions>
            <name>FPSNewInvoiceAlert</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Invoice__c.DownloadLink__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Invoice__c.BillingEmail__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Rule created to send an email to the customer when an invoice is created</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>test</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Invoice__c.DownloadLink__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>PreventUserFromChangingQuote</fullName>
    <active>true</active>
    <description>Quote Type cannot be changed</description>
    <errorConditionFormula>AND(
Not($Setup.CEPSkipValidationRules__c.Quote__c ),
OR(
ISCHANGED(QuoteType__c)
))</errorConditionFormula>
    <errorMessage>It&apos;s not possible to change the Quote Type of an existing Quote. To change it, you must create new Quote with the correct type</errorMessage>
</ValidationRule>

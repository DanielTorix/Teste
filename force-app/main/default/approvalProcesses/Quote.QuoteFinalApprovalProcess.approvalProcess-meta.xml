<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account</field>
        <field>QuoteType__c</field>
        <field>PriceType__c</field>
        <field>FuelVolumeBand__c</field>
        <field>CompetitiveBandFuel__c</field>
        <field>NonFuelCompetitivePackage__c</field>
        <field>VASCompetitivePackage__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>Country Sales Manager Approval</label>
        <name>CountrySalesManagerApproval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <formula>OR(
 ISPICKVAL(NonFuelCompetitivePackage__c, &apos;Non Fuel Package - NF3&apos;),
				ISPICKVAL(CompetitiveBandFuel__c, &apos;CO6&apos;),
				ISPICKVAL(CompetitiveBandFuel__c, &apos;CO5&apos;)
)</formula>
        </entryCriteria>
        <label>Pricing Manager Approval</label>
        <name>PricingManagerApproval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>CompletedStatusOnQuote</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusQuoteApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>DeniedStatusOnQuote</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusQuoteRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>StartedStatusOnQuote</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>StatusQuoteSubmitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Quote Approval Process</label>
    <postTemplate>QuoteForApproval</postTemplate>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>

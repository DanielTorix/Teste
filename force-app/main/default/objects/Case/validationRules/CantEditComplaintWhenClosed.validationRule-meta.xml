<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CantEditComplaintWhenClosed</fullName>
    <active>true</active>
    <errorConditionFormula>NOT($Setup.CEPSkipValidationRules__c.Case__c) &amp;&amp;
RecordType.DeveloperName = &apos;Complaint&apos; &amp;&amp;
IsClosed = TRUE &amp;&amp; 
ReopenedInFlow__c = FALSE</errorConditionFormula>

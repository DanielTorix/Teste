<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CaseNumber</field>
        <field>Account</field>
        <field>CreatedDate</field>
        <field>Contact</field>
        <field>RecordType</field>
        <field>CategoryT1__c</field>
        <field>CategoryT2__c</field>
        <field>CategoryT3__c</field>
        <field>CompanyCodeCountry__c</field>
        <field>Compensation__c</field>
        <field>CompensationType__c</field>
        <field>CompensationAmount__c</field>
        <field>CompensationDetails__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>Claim/Complaint Approval</label>
        <name>ClaimComplaintApproval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Case.CompensationAmount__c</field>
                <operation>greaterThan</operation>
                <value>EUR 10</value>
            </criteriaItems>
        </entryCriteria>
        <label>Compensation Approval</label>
        <name>CompensationApproval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>CaseApprovalStatusApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>CaseApprovalStatusRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CaseApprovalStatusStarted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Claim/Complaint Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>

    <rules>
        <fullName>SendEmailCaseClosed</fullName>
        <actions>
            <name>SendEmailCaseClosedEN</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Send email when a Case is closed</description>
        <formula>AND( NOT($Setup.CEPSkipStandardAutomatedProcesses__c.Case__c),
 IsClosed = true,
ISPICKVAL( Origin , &quot;Email&quot;))</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>SendEmailCaseCreated</fullName>
        <actions>
            <name>SendEmailCaseCreatedEN</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>Rule to send email when a Case is created</description>
        <formula>AND(  
				NOT($Setup.CEPSkipStandardAutomatedProcesses__c.Case__c),  
				ISPICKVAL(  Origin , &quot;Email&quot;), 
				CreatedEmailMessageSent__c,
				PRIORVALUE(CreatedEmailMessageSent__c) = false
)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
